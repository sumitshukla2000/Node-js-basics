        <%- include('../includes/navigation.ejs')%>

            <main>
                <form class="product-form"
                    action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
                    <div class="form-controller">
                        <label for="title"> Title</label>
                        <input type="text" name="title" id="title"
                            value="<% if (editing) { %><%= product.title %> <% } %>" />
                    </div>

                    <div class="form-controller">
                        <label for="imageUrl"> ImageUrl</label>
                        <input type="text" name="imageUrl" id="imageUrl"
                            value="<% if (editing) { %><%= product.imageUrl %> <% } %>" />
                    </div>

                    <div class="form-controller">
                        <label for="price"> Price</label>
                        <input type="number" name="price" id="price" step="0.01"
                            value="<% if (editing) { %><%= product.price %><% } %>" />
                    </div>

                    <div class="form-controller">
                        <label for="description">Description</label>
                        <textarea name="description" id="description"
                            rows="5"><% if (editing) { %><%= product.description %> <% } %></textarea>
                    </div>

                    <% if (editing) { %>
                        <input type="hidden" name="productId" value="<%= product.id %>">
                        <% } %>

                    <button type="submit">
                        <% if (editing) { %>
                            Update Product
                            <% } else { %>
                                Add Product
                                <% } %>
                    </button>
            </main>
